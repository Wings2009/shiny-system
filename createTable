		<script>
		
		function getLetter(){
		  var abc = ["А", "а",	"Б", "б",	"В", "в",	"Г", "г",	"Д", "д",	"Е", "е",	"Ё", "ё", "Ж", "ж",	"З", "з",	"И", "и",	"Й", "й",	"К", "к",	"Л", "л",	"М", "м", "Н", "н",	"О", "о",	"П", "п",	"Р", "р",	"С", "с",	"Т", "т",	"У", "у", "Ф", "ф",	"Х", "х",	"Ц", "ц",	"Ч", "ч",	"Ш", "ш",	"Щ", "щ",	"Ъ", "ъ", "Ы", "ы",	"Ь", "ь",	"Э", "э",	"Ю", "ю",	"Я", "я"]; 
		  return abc[Math.floor(Math.random()*abc.length)];
		}

		function getColor(){
			var a = Math.floor(Math.random()*255);
      var b = Math.floor(Math.random()*255);
      var c = Math.floor(Math.random()*255);
      
      return "rgb("+a+","+b+","+c+")";
		}

		window.onload = function(){
			function Table(columns, rows){
				//table = document.createElement('table'); - не получилось создать таблицу в диве board:(
				  for(var i=0; i<rows; i++){
					var row = document.createElement('tr');
					  for(var j=0; j<columns;j++){
  						var cell = document.createElement('td');
  						cell.innerHTML = getLetter();
  						cell.style.backgroundColor = getColor();
  						row.appendChild(cell);
					  }
					 document.getElementById('board').appendChild(row);
				}
			}

				var columns = parseInt(prompt("Write down the amount of columns"), 10);
				var rows = parseInt(prompt("Write down the amount of rows"), 10);
				 
				if(isNaN(columns) | isNaN(rows)) alert("Not numbers!");
					else Table(columns, rows);
				//
				//in regulars
				//
				//var columns  = prompt("Write down the amount of columns");
				//if(!/[0-9]/.test(columns)) alert("Not numbers!");
				//else Table(columns, rows);
			}
		</script> 
